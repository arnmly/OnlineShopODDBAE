<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B5AAA8"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="643dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="#000000"
        android:orientation="vertical"
        android:foregroundGravity="left"
        android:scrollbarAlwaysDrawVerticalTrack="true">

        <ImageView
            android:id="@+id/d_beige"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/d_beige" />

        <TextView
            android:id="@+id/d_beigee"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="DIONE\nBEIGEE\nRp 60.000"
            android:textAlignment="center"
            android:textColor="#ffffff" />

        <ImageView
            android:id="@+id/d_black"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/d_black" />

        <TextView
            android:id="@+id/d_blackk"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="DIONE\nBLACK\nRp 60.000"
            android:textAlignment="center"
            android:textColor="#ffffff" />

        <ImageView
            android:id="@+id/d_brown"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/d_brown" />
        <TextView
            android:id="@+id/d_brownn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="DIONE\nBROWN\nRp 60.000"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="#ffffff"/>

        <ImageView
            android:id="@+id/d_maroon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/d_maroon" />
        <TextView
            android:id="@+id/d_maroonn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="DIONE\nMAROON\nRp 60.000"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="#ffffff"/>

        <ImageView
            android:id="@+id/d_silver"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/d_silver" />
        <TextView
            android:id="@+id/d_silverr"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="DIONE\nSILVER\nRp 60.000"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="#ffffff"/>

        <ImageView
            android:id="@+id/d_peach"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/d_peach" />
        <TextView
            android:id="@+id/d_peachh"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="DIONE\nPEACH\nRp 60.000"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="#ffffff"/>

    </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/prof"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="27dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:background="@drawable/pro" />

</RelativeLayout>