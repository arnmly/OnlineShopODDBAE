<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B5AAA8"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/back"
        android:layout_width="20dp"
        android:layout_height="23dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="left"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="677dp"

        android:background="@drawable/z"
        tools:src="@drawable/z"
        tools:srcCompat="@drawable/z" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="643dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:background="#000000"
        android:foregroundGravity="left"
        android:orientation="vertical"
        android:scrollbarAlwaysDrawVerticalTrack="true">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="222dp"
            app:srcCompat="@drawable/b"
            android:layout_marginTop="100dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="140dp"
            android:layout_marginRight="140dp"
            android:layout_marginBottom="40dp"
            android:text="KEYNA SQUARE BEIGE"
            android:textAlignment="center"
            android:textColor="#EEEEEE"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/Size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Size : 115 x 115 cm"
            android:textColor="#EEEEEE"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/Material"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Material : Voal Import"
            android:textColor="#EEEEEE"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/Harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="IDR. 55.000"
            android:textColor="#EEEEEE"
            android:textSize="12sp" />

        <Button
            android:id="@+id/ClickLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="100dp"
            android:background="#EEEEEE"
            android:onClick="setClick"
            android:text="Buy"
            android:textColor="#202020"
            android:textSize="20sp"
            tools:ignore="OnClick" />

    </LinearLayout>

    <ImageView
        android:id="@+id/prof"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="right"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="670dp"
        android:background="@drawable/pro"
        tools:src="@drawable/pro"
        tools:srcCompat="@drawable/pro" />

</RelativeLayout>