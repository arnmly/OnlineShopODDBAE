<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="2dp"
    android:background="#B5AAA8"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="left"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="650dp"
        android:background="@drawable/back"
        android:layout_marginLeft="20dp" />

    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="643dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="#B5AAA8"
        android:orientation="vertical"
        android:foregroundGravity="left"
        android:scrollbarAlwaysDrawVerticalTrack="true">

        <View
            android:id="@+id/view"
            android:layout_width="500dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="#000000"/>


        <TextView
            android:id="@+id/shipto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="16dp"
            android:text="Ship to"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/alamat"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:hint="Alamat Pengiriman"
            android:background="#EEEEEE"
            android:inputType="textLongMessage" />

        <TextView
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Contact"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/contact2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:hint="No. HP"
            android:inputType="phone" />
        <View
            android:id="@+id/view1"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginBottom="7dp"
            android:background="#000000" />

        <TextView
            android:id="@+id/order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Order"
            android:layout_marginBottom="10dp"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/d_maroon" />

        <TextView
            android:id="@+id/produk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Dione Pashmina - Maroon"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="30dp"
            android:text="IDR 60.000,-"
            android:textSize="18dp" />


        <View
            android:id="@+id/view2"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="#000000" />

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="35dp"
            android:text="TOTAL : IDR 60.000,-"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BeforeAnyoneElse "
            android:textSize="10dp"
            android:layout_gravity="center"
            android:textStyle="italic"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Made for you who want to be your truly self "
            android:textSize="10dp"
            android:layout_gravity="center"
            android:textStyle="italic"
            />


        <Button
            android:id="@+id/btn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:background="#000000"
            android:text="Continue to payment"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />?>

    </LinearLayout>
    <ImageView
        android:id="@+id/prof"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="right"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="650dp"
        android:background="@drawable/pro"
        android:layout_marginRight="26dp"
        android:layout_alignParentRight="true" />

</RelativeLayout>
